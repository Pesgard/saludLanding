---
import { Card, CardContent } from "$lib/components/ui/card";
import { ChartBar, Database, Users } from "lucide-svelte";
---

<section class="w-full py-12 md:py-24 lg:py-32" id="software">
  <div class="container px-4 md:px-6">
    <div class="grid gap-6 lg:grid-cols-2 lg:gap-12">
      <div class="flex flex-col justify-center space-y-4">
        <div class="space-y-2">
          <h2
            class="text-3xl font-bold tracking-tighter text-[#0033A0] sm:text-4xl md:text-5xl"
          >
            Software Especializado
          </h2>
          <p
            class="max-w-[600px] text-gray-500 md:text-xl/relaxed lg:text-base/relaxed xl:text-xl/relaxed"
          >
            Gestión integral de servicios médicos y seguimiento de pacientes
          </p>
        </div>
        <div class="grid gap-4 md:grid-cols-2">
          <Card>
            <CardContent class="flex flex-col items-center space-y-4 p-6">
              <Users class="h-12 w-12 text-[#0033A0]" />
              <h3 class="text-xl font-bold">Seguimiento de Clientes</h3>
              <p class="text-center text-sm text-gray-500">
                Control y seguimiento detallado de historiales médicos
              </p>
            </CardContent>
          </Card>
          <Card>
            <CardContent class="flex flex-col items-center space-y-4 p-6">
              <ChartBar class="h-12 w-12 text-[#0033A0]" />
              <h3 class="text-xl font-bold">Estadísticas</h3>
              <p class="text-center text-sm text-gray-500">
                Reportes y análisis detallados
              </p>
            </CardContent>
          </Card>
          <Card>
            <CardContent class="flex flex-col items-center space-y-4 p-6">
              <Database class="h-12 w-12 text-[#0033A0]" />
              <h3 class="text-xl font-bold">Inventarios</h3>
              <p class="text-center text-sm text-gray-500">
                Control de insumos y medicamentos
              </p>
            </CardContent>
          </Card>
        </div>
      </div>
      <div class="flex items-center justify-center">
        <img
          src="images/Software.png"
          alt="Software Interface"
          width={600}
          height={600}
          class="rounded-lg object-cover"
        />
      </div>
    </div>
  </div>
</section>
